start transaction;

create table login_metrics (
  login_date date not null primary key,
  anonymous_logins integer not null,
  registered_logins integer not null
);

comment on column login_metrics.login_date is 'The login date in UTC.';
comment on column login_metrics.anonymous_logins is 'The number of anonymous logins on this date.';
comment on column login_metrics.registered_logins is 'The number of registered logins on this date.';

alter table ta_users owner to postgres;

commit;
