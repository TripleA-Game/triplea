<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="aboutSection" alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.triplea.game.client.ui.javafx.screens.AboutInformation">
   <children>
      <Label id="aboutTitle" text="%main.label.about_title" />
      <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="normal-font-size" text="%main.text.about_description" />
      <Button mnemonicParsing="false" onAction="#showHelp" styleClass="normal-font-size" text="%main.button.help">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
      <Button mnemonicParsing="false" onAction="#back" text="%main.button.back">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
